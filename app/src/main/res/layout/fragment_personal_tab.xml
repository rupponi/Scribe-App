<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="top|center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="25sp"
            android:src="@mipmap/favicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:orientation="vertical">

<!--======= GENERAL SECTION =====================================================================-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="GENERAL"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/user_profile_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <!-- NAME FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "NAME"/>

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- GENDER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "GENDER"/>

            <TextView
                android:id="@+id/patient_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- EMAIL FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "EMAIL"/>

            <TextView
                android:id="@+id/patient_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- BIRTHDATE FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "BIRTHDAY"/>

            <TextView
                android:id="@+id/patient_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_date_of_birth"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- STREET ADDRESS FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "STREET ADDRESS"/>

            <TextView
                android:id="@+id/patient_street_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_address_street"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- CITY FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "CITY"/>

            <TextView
                android:id="@+id/patient_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- STATE FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "STATE"/>

            <TextView
                android:id="@+id/patient_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- ZIP FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "ZIP"/>

            <TextView
                android:id="@+id/patient_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- MARITAL STATUS FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "MARITAL STATUS"/>

            <TextView
                android:id="@+id/patient_marital_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- ETHNICITY FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "ETHNICITY"/>

            <TextView
                android:id="@+id/patient_ethnicity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- PHONE NUMBER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "PHONE NUMBER"/>

            <TextView
                android:id="@+id/ContactInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>

<!--======= INSURANCE SECTION ==================================================================-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="INSURANCE"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/user_profile_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <!-- PRIMARY INSURANCE PROVIDER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "PRIMARY INSURANCE PROVIDER"/>

            <TextView
                android:id="@+id/PrimaryInsuranceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_insurance"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- PRIMARY INSURANCE POLICY NUMBER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "PRIMARY INSURANCE POLICY NUMBER"/>

            <TextView
                android:id="@+id/PrimaryPolicyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_insurance_policy"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- PRIMARY INSURANCE GROUP FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "PRIMARY INSURANCE GROUP NUMBER"/>

            <TextView
                android:id="@+id/PrimaryGroupInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_insurance_group"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- SECONDARY INSURANCE PROVIDER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "SECONDARY INSURANCE PROVIDER"/>

            <TextView
                android:id="@+id/SecondaryInsuranceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_insurance"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- SECONDARY INSURANCE POLICY NUMBER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "SECONDARY INSURANCE POLICY NUMBER"/>

            <TextView
                android:id="@+id/SecondaryPolicyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_insurance_policy"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- SECONDARY INSURANCE GROUP NUMBER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "SECONDARY INSURANCE GROUP NUMBER"/>

            <TextView
                android:id="@+id/SecondaryGroupInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_insurance_group"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>

<!--======= EMPLOYER SECTION ====================================================================-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="EMPLOYER"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/user_profile_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <!-- EMPLOYER ORGANIZATION FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "COMPANY/ORGANIZATION"/>

            <TextView
                android:id="@+id/EmployerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_employer"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- EMPLOYER STREET ADDRESS FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "STREET ADDRESS"/>

            <TextView
                android:id="@+id/patient_employer_street_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_address_street"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- EMPLOYER CITY FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "CITY"/>

            <TextView
                android:id="@+id/patient_employer_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_address_city"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- EMPLOYER STATE FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "STATE"/>

            <TextView
                android:id="@+id/patient_employer_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- EMPLOYER ZIP FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "ZIP"/>

            <TextView
                android:id="@+id/patient_employer_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_address_zip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="80sp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>