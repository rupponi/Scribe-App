<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="top|center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="25sp"
                android:src="@mipmap/favicon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Past Appointments"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/user_profile_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/colorPrimary" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment Name"
                    android:layout_marginTop="20dp"/>

                <EditText

                    android:id="@+id/EAppointmentName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex: 'Cardiologist Visit'"
                    android:inputType="text"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organization/Hospital"
                    android:layout_marginTop="20dp"/>

                <EditText

                    android:id="@+id/EOrganization"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex: 'Heartcare Association'"
                    android:inputType="text"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Appointment"
                    android:layout_marginTop="20dp"/>

                <EditText

                    android:id="@+id/EAppointmentDate"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="00/00/0000"
                    android:inputType="text"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Physician Name"
                    android:layout_marginTop="20dp"/>

                <EditText

                    android:id="@+id/EPhysicianName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex: 'Dr.Johnson'"
                    android:inputType="text"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Changes to Prescriptions"
                    android:layout_marginTop="20dp"/>

                <EditText

                    android:id="@+id/EPrescriptionChanges"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex: 'Added Xmg of Y'"
                    android:inputType="textMultiLine"
                    android:lines= "5"
                    android:minLines="1"
                    android:maxLines="8"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor's Notes and Advice"
                    android:layout_marginTop="20dp"/>

                <EditText

                    android:id="@+id/ENotes"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex: 'Advised to set follow-up"
                    android:inputType="textMultiLine"
                    android:lines= "5"
                    android:minLines="1"
                    android:maxLines="8"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/Add_Appointment_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rounded_button_layout"
                    android:layout_gravity="center"
                    android:text="+"
                    android:layout_marginBottom="@dimen/logout_button_margin"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>