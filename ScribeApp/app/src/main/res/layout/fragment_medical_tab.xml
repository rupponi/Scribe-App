<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="top|center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="25sp"
            android:src="@mipmap/favicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:orientation="vertical">

<!--======= EMERGENCY CONTACT SECTION ===========================================================-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="EMERGENCY"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/user_profile_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <!-- PRIMARY EMERGENCY NAME FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "PRIMARY EMERGENCY NAME"/>

            <TextView
                android:id="@+id/PrimaryEmergencyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- PRIMARY EMERGENCY PHONE NUMBER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "PRIMARY CONTACT PHONE NUMBER"/>

            <TextView
                android:id="@+id/PrimaryEContactInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- SECONDARY EMERGENCY NAME FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "SECONDARY EMERGENCY NAME"/>

            <TextView
                android:id="@+id/SecondaryEmergencyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- SECONDARY EMERGENCY PHONE NUMBER FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "SECONDARY CONTACT PHONE NUMBER"/>

            <TextView
                android:id="@+id/SecondaryEContactInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>

<!--======== GENERAL MEDICAL INFORMATION SECTION ================================================-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="GENERAL INFORMATION"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/user_profile_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <!-- BLOOD TYPE FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "BLOOD TYPE"/>

            <TextView
                android:id="@+id/BloodtypeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- PRESCRIPTIONS FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "PRESCRIPTIONS"/>

            <TextView
                android:id="@+id/PrescriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- VACCINATIONS FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "VACCINATIONS"/>

            <TextView
                android:id="@+id/VaccinationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- LIFESTYLE FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "LIFESTYLE"/>

            <TextView
                android:id="@+id/LifestyleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20sp" />

<!--======== MEDICAL HISTORY SECTION ============================================================-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="MEDICAL HISTORY AND CONDITIONS"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/user_profile_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <!-- ALLERGIES FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "ALLERGIES"/>

            <TextView
                android:id="@+id/AllergiesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- FAMILY HISTORY FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "FAMILY HISTORY"/>

            <TextView
                android:id="@+id/FamilyHistoryInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- SURGICAL HISTORY INPUT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "SURGICAL HISTORY"/>

            <TextView
                android:id="@+id/SurgicalHistoryInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />

            <!-- MEDICAL CONDITIONS FIELD -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor = "@color/colorPrimary"
                android:text = "MEDICAL CONDITIONS"/>

            <TextView
                android:id="@+id/ConditionsInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/user_profile_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:background="@color/profile_field_border_color" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>