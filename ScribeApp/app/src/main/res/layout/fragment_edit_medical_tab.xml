<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="top|center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="25sp"
                android:src="@mipmap/favicon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="EDIT MEDICAL INFO"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/user_profile_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_button_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary Emergency Contact Name"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_primary_emergency_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_primary_emergency_name"
                android:inputType="text"
                android:textSize="@dimen/user_entry_field_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary Emergency Contact Phone"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_primary_emergency_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_phone"
                android:inputType="phone"
                android:textSize="@dimen/user_entry_field_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary Emergency Contact Name"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_secondary_emergency_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_secondary_emergency_name"
                android:inputType="text"
                android:textSize="@dimen/user_entry_field_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary Emergency Contact Phone"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_secondary_emergency_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/example_phone"
                android:inputType="phone"
                android:textSize="@dimen/user_entry_field_text"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <Spinner
                android:id="@+id/EBloodtypeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:spinnerMode="dropdown"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prescriptions/Dosages"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_prescriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_borders"
                android:gravity="top|left"
                android:padding="5sp"
                android:lines="4"
                android:hint="@string/example_prescriptions"
                android:inputType="textMultiLine"
                android:textSize="@dimen/user_entry_field_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccinations"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_vaccinations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_borders"
                android:gravity="top|left"
                android:padding="5sp"
                android:lines="4"
                android:hint="@string/example_vaccinations"
                android:inputType="textMultiLine"
                android:textSize="@dimen/user_entry_field_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lifestyle"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_lifestyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_borders"
                android:gravity="top|left"
                android:padding="5sp"
                android:lines="4"
                android:hint="@string/example_lifestyle"
                android:inputType="textMultiLine"
                android:textSize="@dimen/user_entry_field_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergies"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_borders"
                android:gravity="top|left"
                android:padding="5sp"
                android:lines="4"
                android:hint="@string/example_allergies"
                android:inputType="textMultiLine"
                android:textSize="@dimen/user_entry_field_text"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family History"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_family_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_borders"
                android:gravity="top|left"
                android:padding="5sp"
                android:lines="4"
                android:hint="@string/example_family_history"
                android:inputType="textMultiLine"
                android:textSize="@dimen/user_entry_field_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surgical History"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_surgical_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_borders"
                android:gravity="top|left"
                android:padding="5sp"
                android:lines="4"
                android:hint="@string/example_surgical_history"
                android:inputType="textMultiLine"
                android:textSize="@dimen/user_entry_field_text"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Conditions"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/text_entry_separator"/>

            <EditText
                android:id="@+id/edit_medical_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_borders"
                android:gravity="top|left"
                android:padding="5sp"
                android:lines="4"
                android:hint="@string/example_medical_conditions"
                android:inputType="textMultiLine"
                android:textSize="@dimen/user_entry_field_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="80sp"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>